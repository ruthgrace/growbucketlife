# Default server configuration
#

# PUT THIS IN /etc/nginx/sites-available and /etc/nginx/sites-enabled

server {
	listen 80;
        listen [::]:80;
	server_name growbucket.life www.growbucket.life;

        location ~ /.well-known {
            root /var/www/growbucket;
        }
        location / {
            return 301 https://$host$request_uri;
        }

}

server {
        listen 443 ssl;
	server_name growbucket.life www.growbucket.life;
        ssl_certificate /etc/letsencrypt/live/growbucket.life/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/growbucket.life/privkey.pem;

        location ~ /static {
            root /var/www/growbucket;
        }

        location / {
            proxy_set_header Host $http_host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://unix:/var/www/growbucket/growbucket.sock;
        }

}

